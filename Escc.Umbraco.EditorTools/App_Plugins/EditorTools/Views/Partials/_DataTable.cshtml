
@model Escc.Umbraco.EditorTools.App_Plugins.EditorTools.Models.DataModels.TableModel
@using System.Data


<div class="dt-rowReorder-noOverflow">
    <div class="table-responsive">
        <table class="table table-striped table-bordered display data-table" cellspacing="0" id="@Model.ID">
            <thead>
                <tr>
                    @foreach (DataColumn col in Model.Table.Columns)
                    {
                        <th>@col.ColumnName</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Table.Rows)
                {
                    <tr>
                        @foreach (DataColumn col in Model.Table.Columns)
                        {
                            <td>@Html.Raw(row[col.ColumnName])</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@if (Model.ID == "SelectedTable")
{
    <script>
        $(document).ready(function () {
            $('#@Model.ID').DataTable({
                aLengthMenu: [
                    [-1],
                    ["All"]
                ],
                iDisplayLength: -1,
                "order": [[0, "desc"]]
            });
        });
    </script>
}
else
{
    <script>
        $(document).ready(function () {
            $('#@Model.ID').DataTable({
                aLengthMenu: [
                    [10, 25, 50, 100, -1],
                    [10, 25, 50, 100, "All"]
                ],
                iDisplayLength: 10,
                "order": [[0, "desc"]]
            });
        });
    </script>
}
